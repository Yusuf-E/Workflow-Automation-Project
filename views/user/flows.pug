<!doctype html> 
include ../mixins/create-flow.pug
html(lang="en")
  include ../includes/head.pug
// WRAPPER
#wrapper
  include ../includes/navbar.pug
  // END NAVBAR
  // LEFT SIDEBAR
  include ../includes/menu.pug
  // END LEFT SIDEBAR
  // MAIN
  .main
    // MAIN CONTENT
    .main-content
      .container-fluid
        .row
          .col-sm-12
            .row(style="height:60px;")
              .col-sm-6
                form(action='/search-user' method='POST')
                  #adv-search.input-group
                    input.form-control#searchBar(type='text' placeholder='Dilekçe Sahibinin Numarasını Yazın' name='searchBar')
                    .input-group-btn
                      .btn-group(role='group')
                        button.btn.btn-primary(type='submit')
                          i.fa.fa-search 
        .row
          .col
            // TABLE STRIPED
            .panel
              .panel-heading
                h3.panel-title Akışlar 
              .panel-body
                table.table.table-striped.table-hover
                  thead
                    tr
                      th #
                      th Düzenleyen
                      th FormSahibi  
                      th Tarih 
                      th.text-center Açıklama
                      th.text-center Görüntüle
                      th.text-center   
                        span Durum 
                  tbody
                    - var i =0;
                    if flows.length > 0 
                      each flow in flows 
                        - ++i;
                        +createFlow(flow,items,i,users)

            // END TABLE STRIPED
    // END MAIN CONTENT
  // END MAIN
  .clearfix
  footer
    .container-fluid
// END WRAPPER
