<!doctype html>
include ../mixins/create-approver.pug
html(lang="en")
  include ../includes/head.pug

// WRAPPER
#wrapper
  include ../includes/navbar.pug
  include ../includes/menu.pug
  // END LEFT SIDEBAR
  // MAIN
  .main
    // MAIN CONTENT
    .main-content
      .container-fluid
        .row(style='height:500px;')
            .img-container-inline(style='float:left; display:inline-block;')
                img(src=`/assets/fileimg/${flow.imageUrl}`  alt="" style='height:500px; width:400px;')
            div(style='float:right;').col-sm-7
                .row 
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th #
                                th.text-center İsim
                                th.text-center Durum
                                th.text-center   
                                    span Açıklama 

                        tbody
                          -var i = 0;
                          if items.length > 0
                            each item in items 
                              - ++i;
                              +createApprover(item,i,users)
    // END MAIN CONTENT
  // END MAIN
  .clearfix
  footer
    .container-fluid
      p.copyright