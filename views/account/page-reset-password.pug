<!doctype html>
html(lang="en")
  include ../includes/head.pug
// WRAPPER
#wrapper
  .vertical-align-wrap
    .vertical-align-middle
      .auth-box.lockscreen.clearfix
        .content
          h1.sr-only
          .logo.text-center
            img(src='assets/img/uni_logo.gif' alt='uni_logo')
          form(action='forgot-password' method='POST')
            input(type="hidden" name='_csrf' value=`${csrfToken}`)
            .input-group
              input#email.form-control(type='Email' placeholder='Kayıtlı olduğunuz email adresinizi giriniz..' name='email')
              span.input-group-btn
                button.btn.btn-primary(type='submit')
                  i.fa.fa-arrow-right
// END WRAPPER
