  // MAIN
  .main
    // MAIN CONTENT
    .main-content
      .container-fluid
        .panel.panel-profile
          .clearfix
            // LEFT COLUMN
            .profile-left
              // PROFILE HEADER
              .profile-header
                .overlay
                .profile-main
                  img.img-circle(src='assets/img/user-medium.png' alt='Avatar')
                  h3.name Samuel Gold
                  span.online-status.status-available Available
                .profile-stat
                  .row
                    .col-md-4.stat-item
                      | 45 
                      span Projects
                    .col-md-4.stat-item
                      | 15 
                      span Awards
                    .col-md-4.stat-item
                      | 2174 
                      span Points
              // END PROFILE HEADER
              // PROFILE DETAIL
              .profile-detail
                .profile-info
                  h4.heading Basic Info
                  ul.list-unstyled.list-justify
                    li
                      | Birthdate 
                      span 24 Aug, 2016
                    li
                      | Mobile 
                      span (124) 823409234
                    li
                      | Email 
                      span samuel@mydomain.com
                    li
                      | Website 
                      span
                        a(href='https://www.themeineed.com') www.themeineed.com
                .profile-info
                  h4.heading Social
                  ul.list-inline.social-icons
                    li
                      a.facebook-bg(href='#')
                        i.fa.fa-facebook
                    li
                      a.twitter-bg(href='#')
                        i.fa.fa-twitter
                    li
                      a.google-plus-bg(href='#')
                        i.fa.fa-google-plus
                    li
                      a.github-bg(href='#')
                        i.fa.fa-github
                .profile-info
                  h4.heading About
                  p Interactively fashion excellent information after distinctive outsourcing.
                .text-center
                  a.btn.btn-primary(href='#') Edit Profile
              // END PROFILE DETAIL
