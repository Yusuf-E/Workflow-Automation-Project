            .profile-right
              h4.heading Samuel&apos;s Awards
              // AWARDS
              .awards
                .row
                  .col-md-3.col-sm-6
                    .award-item
                      .hexagon
                        span.lnr.lnr-sun.award-icon
                      span Most Bright Idea
                  .col-md-3.col-sm-6
                    .award-item
                      .hexagon
                        span.lnr.lnr-clock.award-icon
                      span Most On-Time
                  .col-md-3.col-sm-6
                    .award-item
                      .hexagon
                        span.lnr.lnr-magic-wand.award-icon
                      span Problem Solver
                  .col-md-3.col-sm-6
                    .award-item
                      .hexagon
                        span.lnr.lnr-heart.award-icon
                      span Most Loved
                .text-center
                  a.btn.btn-default(href='#') See all awards
              // END AWARDS
              // TABBED CONTENT
              .custom-tabs-line.tabs-line-bottom.left-aligned
                ul.nav(role='tablist')
