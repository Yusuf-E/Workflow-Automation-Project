mixin createTask(flow,i,users)
    tr
        td #{i}
        if users.length > 0
            each user in users
                if flow.userId===user.id
                    td #{user.nameSurname}
        td #{flow.ownerId}
        td #{flow.createdAt}
        td 
            if flow.taskitem.confirmation === null
                textarea.col-sm-12(placeholder='' rows='1' style='text-align: center; color:#0000FF ;font-weight:bold;resize:none;') ONAY BEKLİYOR
            if flow.taskitem.confirmation === false
                textarea.col-sm-12(placeholder='' rows='1' style='text-align: center; color:#FF0000;font-weight:bold;resize:none;') REDDEDİLDİ
            if flow.taskitem.confirmation === true
                textarea.col-sm-12(placeholder='' rows='1' style='text-align: center; color:#00FF00;font-weight:bold;resize:none;') ONAYLANDI
        td.text-center
            if flow.taskitem.confirmation === null
                a(href=`/task-detail/${flow.id}`)                       
                    i.fa.fa-file(style='font-size:24px;')  
            if flow.taskitem.confirmation === false
                a(href=`/flow-detail/`)                       
                    i.fa.fa-file(style='font-size:24px;')              
            if flow.taskitem.confirmation === true   
                a(href=`/flow-detail`)                       
                    i.fa.fa-file(style='font-size:24px;')  