mixin createUser(user,faculties,departments)
    tr
        td 
            span #{user.id}
        td 
            img(src=`/assets/fileimg/${user.imageUrl}`, alt="" style='width:48px;height:48px;')
        td 
            img(src='/assets/img/default-user-image.png', alt="" style='height:48px;width:0px;')
            span  &nbsp;  &nbsp; #{user.nameSurname}
        td 
            img(src='/assets/img/default-user-image.png', alt="" style='height:48px;width:0px; margin-left:48px;')
            span  &nbsp;  &nbsp; #{user.createdAt}
  
        td
            img(src='/assets/img/default-user-image.png', alt="" style='height:48px;width:0px;')
            each faculty in faculties 
                if faculty.id === user.facultyId
                    span  &nbsp;  &nbsp; #{faculty.name} 

        td
            img(src='/assets/img/default-user-image.png', alt="" style='height:48px;width:0px;')
            each department in departments 
                if department.id === user.departmentId
                    span  &nbsp;  &nbsp; #{department.name} 
        
        td
            img(src='/assets/img/default-user-image.png', alt="" style='height:48px;width:0px;') 
            a(href="")                           
                i.fa.fa-cog.primary  
            a(href="")  &nbsp;                            &nbsp;
                i.delete.fa.fa-times-circle.rediconcolor 